@*
    //V#135 Indice de Categorias (Creando Index de categoria 01.50)
*@

@* Va a recibir un IEnumerable *@
@model IEnumerable<CategoriaViewModel>

@{
    ViewData["Title"] = "Categorías";
}

<h1>Categorias</h1>
<h5>La categoría nos permite indicar en que gatamos nuestro dinetro, tambien de donde provienen nuestros ingresos.</h5>

@* Anchor para poder ir desde el index a crear *@
<a asp-action="Crear" class="btn btn-primary">Crear</a>

<table class="table">
    @* Encabezado *@
    <thead>
        @* Para fila *@
        <tr>
            @* Para columna *@
            <th>Acciones</th>
            <th>Nombre de categoria</th>
            <th>Tipo</th>
        </tr>
    </thead>
    @* Cuerpo *@
    <tbody>
        @foreach (var categoria in Model)
        {
            //Para fila
            <tr>
                @* Para Columna 1, n.. *@
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@categoria.Id">Editar</a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@categoria.Id">Borrar</a>
                </td>
                <td>
                    @categoria.NombreCategoria
                </td>
                <td>
                    @categoria.TipoOperacionId.ToString()
                </td>
            </tr>
        }
    </tbody>
</table>