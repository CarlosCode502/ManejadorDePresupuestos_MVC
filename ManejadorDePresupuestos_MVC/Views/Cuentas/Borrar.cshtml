@*
    //V#131 Borrando Cuentas (Crando la vista borrar)
*@

@model CuentaViewModel

@{
    ViewData["Title"] = "Borrar Cuenta";
}

<h3>¿Está seguro que desea borrar el tipo cuenta <strong>@Model.Nombre?</strong></h3>

@* asp-action contiene el nombre de la action (HTTPPOST)*@
<form asp-action="BorrarCuenta">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
