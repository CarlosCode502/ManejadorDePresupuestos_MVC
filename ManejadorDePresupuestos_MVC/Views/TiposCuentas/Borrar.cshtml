@*
    //V#118 Borrando Tipos Cuentas (Creando la vista)
*@

@model TipoCuentaViewModel

@{
    ViewData["Title"] = "Borrar Tipo de Cuenta";
}

<h3 class="mb-3">¿Está seguro que desea borrar el tipo cuenta <strong>@Model.Nombre?</strong></h3>

@* asp-action contiene el nombre de la action (HTTPPOST)*@
<form asp-action="BorrarTipoCuenta">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>