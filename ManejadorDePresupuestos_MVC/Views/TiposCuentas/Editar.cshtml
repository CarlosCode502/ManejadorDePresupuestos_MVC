@*
    //V#117 Actualizando Tipos Cuentas (Creando la vista Editar)
*@

@model TipoCuentaViewModel //importamos el modelo

@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}

@* Lo mismo que el fórmulario crear solo que se agrega el campo id oculto *@
<h1>Editar Tipo Cuenta: @Model.Nombre</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Editar" method="get">
    
    @* Se agregó el campo Id para poder utilizarlo (El usuario no lo visualizara por eso hiden) *@
    <input type="hidden" asp-for="Id" />
    
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>

    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}